<?xml version="1.0"?>
<page layout="3columns"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="logo">
        <arguments>
            <argument name="logo_width" xsi:type="number">220</argument>
            <argument name="logo_height" xsi:type="number">185</argument>
            <argument name="logo_file" xsi:type="string">images/IBCSkateLogo.png</argument>
        </arguments>
    </referenceBlock>
    <referenceBlock name="header" remove="true"/>

    <referenceContainer name="footer" remove="true"/>
    <referenceContainer name="footer-container">
        <container name="footer-content" htmlTag="div" htmlClass="block footer-content">
            <block class="Magento\Cms\Block\Block" name="footer_links_block">
                <arguments>
                    <argument name="block_id" xsi:type="string">skate-footer</argument>
                </arguments>
            </block>
        </container>
    </referenceContainer>

    <referenceContainer name="main.content" htmlTag="main" htmlClass="page-main-full-width" />

</page>
